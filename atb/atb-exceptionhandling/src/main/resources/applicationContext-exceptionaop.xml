<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns:aop="http://www.springframework.org/schema/aop"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd 
  			http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">
	
	<import resource="classpath:applicationContext-exception.xml" />

	<aop:config>
		<aop:aspect id="exceptionLogInterceptor" ref="exceptionInterceptor">
			<aop:after-throwing method="logException" throwing="exception" pointcut="execution(public * com.atb.web.dao..*(..))" />
		</aop:aspect>
	</aop:config>
	<aop:aspectj-autoproxy proxy-target-class="true" />

</beans>