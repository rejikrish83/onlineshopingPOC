<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
		
	<!-- Root Context: defines shared resources accessible to all other web components -->
	
	<!-- Configures shared data layer -->
	<import resource="classpath:data-source-context.xml" />
	
	<!-- Configures Logging layer -->
	<import resource="classpath:applicationContext-loggingaop.xml" />
	
	<!-- Configures Exception Handling layer -->
	<import resource="classpath:applicationContext-exceptionaop.xml" />
	
</beans>
